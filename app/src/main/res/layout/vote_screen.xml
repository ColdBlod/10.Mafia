<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_vote_layout_screen"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/main_vote_layout_vote_screen"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="16"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_margin="10sp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/pause_btn_vote_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/nothing"
                    android:src="@drawable/pause"
                    android:scaleType="fitStart"/>

            </FrameLayout>

            <Button
                android:id="@+id/end_the_game_in_the_start_btn"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="10sp"
                android:background="@drawable/rounded"
                android:text="Завершить"
                android:textColor="@color/white"/>

        </LinearLayout>

        <TextView
            android:id="@+id/saying_lb_vote_screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:gravity="center"
            android:text="Игрок #1\nследующий"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="голос"
                    android:gravity="center"/>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="допы"
                    android:gravity="center"/>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="фолы"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lst_players_layout_vote_scren"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_weight="30"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/lst_players_vote_screen"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/start_next_btn_vote_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:background="@color/nothing"
                android:src="@drawable/start"/>

            <TextView
                android:id="@+id/text_lb_next_vote_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Начать речь"
                android:gravity="center"
                android:layout_weight="2"
                android:textSize="25sp"
                android:layout_marginTop="10sp"
                android:layout_gravity="bottom"/>

        </LinearLayout>


    </LinearLayout>
</FrameLayout>