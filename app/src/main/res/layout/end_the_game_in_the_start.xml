<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/low_red"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_weight="16"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="10sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/back_to_the_game_end_the_game_start"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="10sp"
            android:background="@drawable/rounded_end_the_game_start"
            android:text="Вернуться"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:id="@+id/saying_lb_vote_screen"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="15"
        android:gravity="center"
        android:text="Завершить игру"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/peacful_win_end_the_game_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:background="@color/nothing"
                android:src="@drawable/peacful_win"/>

            <ImageButton
                android:id="@+id/mafia_win_end_the_game_screen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/nothing"
                android:scaleType="fitCenter"
                android:src="@drawable/mafia_win"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/maniac_win_end_the_game_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/nothing"
            android:scaleType="fitCenter"
            android:src="@drawable/maniac_win"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/end_the_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:background="@color/nothing"
            android:src="@drawable/white_start"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Завершить игру"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_weight="2"
            android:textSize="25sp"
            android:layout_marginTop="10sp"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    </LinearLayout>